{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "es2019",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": false
  },
  "include": ["src"]
}
